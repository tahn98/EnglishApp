<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizSelectActivity">

    <TextView
        android:fontFamily="sans-serif-medium"
        android:textColor="#FFFFFF"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_alignright_rb"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="40sp"
        android:text="QUIZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Excercise You Want To Do"/>

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="TOEIC TEST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/imgToeic"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_alignright_red"
        android:fontFamily="sans-serif"
        android:text="TOEIC \n Help you improve your score "
        android:textSize="18dp" />

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:text="FUNNY TEST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/imgFunny"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_alignright"
        android:fontFamily="sans-serif"
        android:text="QUIZ \n BEST FUNNY TEST"
        android:textSize="18dp" />

</LinearLayout>